{
  "manifest_version": 3,
  "name": "Napkin Notes â€¢ Canvas for thought",
  "description": "Your quickest canvas for thought. Capture ideas and notes in seconds from the side panel!",
  "version": "2.0",
  "permissions": ["storage", "sidePanel"],
  "icons": {
    "48": "/assets/icon48.png",
    "128": "/assets/icon128.png"
  },
  "action": {
    "default_icon": {
      "48": "/assets/icon48.png",
      "128": "/assets/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "commands": {
    "open-side-panel": {
      "suggested_key": {
        "default": "Alt+X"
      },
      "description": "Open Napkin Notes side panel"
    },
    "open-side-panel-secondary": {
      "suggested_key": {
        "default": "Alt+Shift+X"
      },
      "description": "Secondary shortcut to open Napkin Notes side panel"
    }
  }
}
